@page
@model CoffeeShopApp.Pages.Employees.EmployeesModel
@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="NewEmployee.Name"></label>
        <input asp-for="NewEmployee.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewEmployee.Schedule"></label>
        <input asp-for="NewEmployee.Schedule" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>

<h2>Employee List</h2>
<ul>
@foreach (var employee in Model.Employees)
{
    <li>@employee.Name - @employee.Schedule</li>
}
</ul>
